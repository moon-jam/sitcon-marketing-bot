# Telegram Bot Token (從 @BotFather 取得)
BOT_TOKEN=your_bot_token_here

# 允許使用 bot 的聊天室 ID（多個用逗號分隔）
ALLOWED_CHAT_IDS=-1001234567890,-1009876543210

# 提醒 reviewers 審核的週期（分鐘）
# 預設：60 分鐘（每小時）
REMINDER_INTERVAL_PENDING=60

# 提醒提交者修改的週期（分鐘）
# 預設：120 分鐘（每兩小時）
REMINDER_INTERVAL_NEED_FIX=120

# GitLab 設定
GITLAB_URL=https://gitlab.com
GITLAB_PROJECT_ID=your_project_id_here
GITLAB_TOKEN=your_personal_access_token_here

# 免打擾時段（HH:MM 格式，時區 Asia/Taipei）
# 在此時段內不會發送自動提醒通知
# 留空或不設定則不啟用免打擾
QUIET_HOURS_START=02:00
QUIET_HOURS_END=08:00
